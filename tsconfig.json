{
  "extends": "@tsconfig/react-native/tsconfig.json",
  "compilerOptions": {
    /* Visit https://aka.ms/tsconfig.json to read more about this file */

    /* Skip type checking all .d.ts files. */
    "skipLibCheck": true,
    // Remove jest from types
    "types": [
      "react-native"
    ],
    // Allow no export files
    "isolatedModules": false,
    // Aliases
    "baseUrl": ".",
    "paths": {
      "*": [
        "src/*"
      ],
      "assets/*": [
        "src/assets/*"
      ],
      "components/*": [
        "src/components/*"
      ],
      "helpers/*": [
        "src/helpers/*"
      ],
      "hooks/*": [
        "src/hooks/*"
      ],
      "interfaces/*": [
        "src/interfaces/*"
      ],
      "modules/*": [
        "src/modules/*"
      ],
      "names/*": [
        "src/names/*"
      ],
      "screens/*": [
        "src/screens/*"
      ],
      "services/*": [
        "src/services/*"
      ],
      "store/*": [
        "src/store/*"
      ],
      "types/*": [
        "src/types/*"
      ]
    }
  }
}
